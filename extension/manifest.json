{
  "manifest_version": 3,
  "name": "Misinfo Guardian",
  "version": "0.1.0",
  "description": "Dwell-based misinformation detector for Twitter/X",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
